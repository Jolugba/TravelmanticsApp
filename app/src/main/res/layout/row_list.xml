<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_dimension_small"
        android:layout_marginTop="@dimen/margin_dimension_standard"
        android:layout_marginEnd="@dimen/margin_dimension_small"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/travelDealsImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/travelDealsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_dimension_small"
                android:layout_marginTop="@dimen/margin_dimension_small"
                android:textSize="@dimen/text_size_large"
                app:layout_constraintStart_toEndOf="@+id/travelDealsImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/travelDealDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_dimension_small"
                android:layout_marginTop="@dimen/margin_dimension_standard"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintStart_toEndOf="@+id/travelDealsImage"
                app:layout_constraintTop_toBottomOf="@+id/travelDealsTitle" />

            <TextView
                android:id="@+id/travelDealsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dimension_small"
                android:layout_marginEnd="@dimen/margin_dimension_small"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/travelDealDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>